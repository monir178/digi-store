{
  "compilerOptions": {
    "target": "es6", // Consider changing to es6 or esnext if compatibility allows
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false, // Set to false to catch type errors in libraries
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Ensure this matches your module system
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
